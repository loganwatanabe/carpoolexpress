<!Doctype HTML>
<html>
<head>
        <link rel="stylesheet" href="/jquery.mobile-1.3.2/jquery.mobile-1.3.2.css" />
        <script src="/javascripts/jquery-1.10.2.min.js"></script>
        <script src="/jquery.mobile-1.3.2/jquery.mobile-1.3.2.min.js"></script>
         <link rel="stylesheet" href="/stylesheets/override.css" />
         <title><%= name %></title>
</head>

<body>
    <div data-role="header">
      <a href="/" data-icon="bars" class="ui-btn-left">Menu</a>
      <h1><%=name%></h1>
      <a href="/login" data-icon="star" class="ui-btn-right" data-theme="b">Log In</a>
    </div>
    
    <div class="container">
        <h1><%= name %></h1>

        <div>
            <p>Event Name:  <%=name%></p>
        </div>
        <div>
            <p>Date:  <%=date%></p>
        </div>
        <div>
            <p>Location:  <%=location%></p>
        </div>
        <div>
            <p>Start Time:  <%=start_time%></p>
        </div>
        <div>
            <p>End Time:  <%=end_time%></p>
        </div>
        <div>
            <p>Description:  <%=description%></p>
        </div>
        <a href= <%= "/event/"+id+"/edit"%> data-role="button" data-inline="true" data-mini="true" data-theme="b">Edit</a>
        <br>
        <form method="post" action=<%= "/event/"+id+"/delete"%>>
            <input name="_id" type="hidden" value=<%=id%>>
            <input data-role="button" data-inline="true" data-mini="true" data-theme="e" id="delete" name="delete" value="Delete" type="submit">
        </form>
    </div>
</body>
</html>