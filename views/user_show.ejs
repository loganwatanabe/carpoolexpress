<% layout('layout') -%>
    
    <div class="container">
        <h1><%= first_name + " " + last_name %></h1>

        <div>
            <p>Username:  <%=username%></p>
        </div>
        <div>
            <p>Password:  <%=password%></p>
        </div>
        <div>
            <p>First Name:  <%=first_name%></p>
        </div>
        <div>
            <p>Last Name:  <%=last_name%></p>
        </div>
        <div>
            <p>Email:  <%=email%></p>
        </div>
        <div>
            <p>Contact Info:  <%=contact%></p>
        </div>
        <a href= <%= "/user/"+id+"/edit"%> data-role="button" data-inline="true" data-mini="true" data-theme="b">Edit</a>
        <br>
        <form method="post" action=<%= "/user/"+id+"/delete"%>>
            <input name="_id" type="hidden" value=<%=id%>>
            <input data-role="button" data-inline="true" data-mini="true" data-theme="e" id="delete" name="delete" value="Delete" type="submit">

        </form>
    </div>