<% layout('layout') -%>
    <div class="container">
        <h1><%= title %></h1>
        <a href= "/event/new" data-role="button" data-inline="true" data-mini="true" data-theme="b">Create an Event</a>
        <ul data-role="listview">

        	<% if(collection==null || collection.size==0) {%>
        		<tr><td>There is nothing in this collection.</td></tr>
        	<% }else{ %>
            <li>
                <table>
        			<tr>
                        <td>Name</td>
                        <td>Date</td>
                        <td>Location</td>
                        <td>ID</td>
        			</tr>
                </table>
            </li>
        	<% for(object in collection){ var obj=collection[object];%>
            <li><a href=<%="/event/"+obj._id%>>
                <table>
        			<tr id="">
        				<td><%= obj.name %></td>
                        <td><%= obj.date %></td>
                        <td><%= obj.location %></td>
                        <td><%= obj._id %></td>
        			</tr>
                </table>
            </a></li>
        		<% }%>

        	<% }%>
    	</ul>
    </div>